{{#if user.name}}
<section id="feed-posts">
    <form action="/post/create" id="new-post-form" method="post">
    Posts<br><br>
        <textarea name="content" id="content" placeholder="Type Here ...." rows="3" cols="30"></textarea>
        <br><br>
        <input type="submit" value="Submit">
    </form>
</section>
{{/if}}

<p>Posts of the users</p>

<br>
    <div class="posts">
        {{#each posts}}
            <div class="post">
                {{this.content}}
                <br>
                {{this.user.name}}
            </div>
            <br>
        {{/each}}
    </div>

<br>
{{>footer}}